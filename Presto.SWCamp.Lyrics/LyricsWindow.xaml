<Window
    x:Class="Presto.SWCamp.Lyrics.LyricsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ps="clr-namespace:Presto.SDK;assembly=Presto.SDK"
    Title="미니 플레이어"
    Width="200"
    Height="60"
    DataContext="{x:Static ps:PrestoSDK.PrestoService}"
    MouseLeftButtonDown="Window_MouseDown"
    MouseDoubleClick="Window_MouseDoubleClick"
    WindowStyle="None" ResizeMode="NoResize" ShowInTaskbar="False" AllowsTransparency="True" Background="{x:Null}">
    <Border  BorderThickness="1.5"
             CornerRadius="10" Background="#FFE1DCD9">
        <Grid>
<!--
                <StackPanel Width="100" Height="100" HorizontalAlignment="Left" Margin="3">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="noAlbumArt.JPG"/>
                    </StackPanel.Background>
                    <Image 
                        x:Name="albumArtImage"
                        Source="{Binding Player.CurrentMusic.Album.Picture}" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top" />
                </StackPanel>
                <Label x:Name="playStatus" Content="" HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Width="100" Height="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" FontWeight="Bold"/>
                <Button HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Width="30" Height="100" Click="PrevButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="White" Opacity="0" ToolTip="이전곡"/>
                <Button HorizontalAlignment="Left" Margin="33,5,0,0" VerticalAlignment="Top" Width="40" Height="100" Click="PlayOrPauseButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="White" Opacity="0" ToolTip="재생/일시정지"/>
                <Button HorizontalAlignment="Left" Margin="73,5,0,0" VerticalAlignment="Top" Width="30" Height="100" Click="NextButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="White" Opacity="0" ToolTip="다음곡"/>
-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Rectangle Grid.Column="0" Height="60" Width="60" RadiusX="10" RadiusY="10">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="noAlbumArt.JPG" Opacity="0.9"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Grid.Column="0" Height="60" Width="60" RadiusX="10" RadiusY="10">
                <Rectangle.Fill>
                    <ImageBrush  x:Name="albumArtImage" ImageSource="{Binding Player.CurrentMusic.Album.Picture}"/>
                </Rectangle.Fill>
            </Rectangle>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                </Grid>
                <TextBlock Grid.Row="1" Text="{Binding Player.CurrentMusic.Title}" FontWeight="Bold" TextAlignment="Center" TextOptions.TextFormattingMode="Display" FontSize="12" Foreground="#FF32435F" Name="MyWipedText">
                    
                    <TextBlock.Triggers>
                       
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Grid.Row="2" Text="{Binding Player.CurrentMusic.Artist.Name}" Foreground="#FF8F8681" TextAlignment="Center" FontSize="10"  TextOptions.TextFormattingMode="Display" FontWeight="Bold"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="◀◀" Width="auto" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA67F78" TextOptions.TextFormattingMode="Display" FontSize="12" Click="PrevButton_Click" Margin="0,-2,0,2"/>
                    <Button Grid.Column="1" Content="▶ / &#10074;&#10074;" Width="auto" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA67F78" TextOptions.TextFormattingMode="Display" FontSize="12" Click="PlayOrPauseButton_Click" Margin="0,-2,0,2"/>
                    <Button Grid.Column="2" Content="▶▶" Width="auto" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA67F78" TextOptions.TextFormattingMode="Display" FontSize="12" Click="NextButton_Click" Margin="0,-2,0,2"/>

                </Grid>
            </Grid>
         </Grid>

    </Border>
</Window>
